{
  "name": "test-hono-rpc-better-auth",
  "scripts": {
    "dev": "bun run --hot server/index.ts",
    "db:up": "docker compose up -d",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run ./scripts/seed-local-db.script.ts",
    "create:test:db": "bun run ./scripts/create-test-db.script.ts",
    "destory:test:db": "bun run ./scripts/destroy-test-db.script.ts",
    "open-auth-docs": "open-cli http://localhost:3000/api/auth/reference",
    "build": "bun build ./server/index.ts --outdir ./dist --target bun",
    "start": "bun run ./dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "bun run create:test:db && bun test && bun run destory:test:db"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.2",
    "@neondatabase/serverless": "^1.0.1",
    "better-auth": "^1.3.4",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.8.12",
    "pg": "^8.16.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "open-cli": "^8.0.0",
    "typescript": "^5.9.2"
  }
}
